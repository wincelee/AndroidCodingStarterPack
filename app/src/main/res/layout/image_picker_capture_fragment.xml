<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pick_capture_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="@string/pick_capture_image"
            android:theme="@style/MaterialTheme" />

        <ImageView
            android:id="@+id/imv_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/btn_pick_capture_image"
            android:contentDescription="@string/show_image_capture_chosen"
            android:scaleType="fitCenter"
            android:padding="5dp"/>

    </RelativeLayout>

    <include layout="@layout/bottom_sheet_pick_capture" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>